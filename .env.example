# Existing environment variables
NODE_ENV=development
PORT=5000
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
JWT_SECRET=jwt-secret-here

# Privy Configuration (Legacy - will be removed after migration)
PRIVY_APP_ID=privy-app-id
PRIVY_APP_SECRET=privy-app-secret

# Thirdweb Configuration
THIRDWEB_SECRET_KEY=thirdweb-secret-key-here
THIRDWEB_CLIENT_ID=thirdweb-client-id-here

# New Webhook Configuration
# Privy webhook secret for signature verification
PRIVY_WEBHOOK_SECRET=privy-webhook-secret-here

# AWS Configuration for EventBridge
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=aws-access-key-id
AWS_SECRET_ACCESS_KEY=aws-secret-access-key

# EventBridge Configuration
AWS_EVENTBRIDGE_BUS_NAME=illuvium-events
AWS_EVENTBRIDGE_SOURCE=illuvium.webhooks.privy

# EventBridge batch configuration
AWS_EVENTBRIDGE_BATCH_SIZE=10
AWS_EVENTBRIDGE_BATCH_TIMEOUT_MS=5000