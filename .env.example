SUBGRAPH_URL_ETHEREUM=
SUBGRAPH_URL_ARBITRUM=
SUBGRAPH_URL_OPTIMISM=

# CoinGecko API
COINGECKO_API_KEY=

# Alchemy Configuration
# API keys for different chains
ALCHEMY_API_KEY_BASE=your-alchemy-base-api-key
ALCHEMY_API_KEY_OBELISK=your-alchemy-obelisk-api-key

# Data Provider Selection (subgraph or alchemy)
DATA_PROVIDER=subgraph

