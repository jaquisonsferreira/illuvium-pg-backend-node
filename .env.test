# Test environment for Docker
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://root@host.docker.internal:26257/illuvium?sslmode=disable
DB_HOST=host.docker.internal
DB_PORT=26257
DB_NAME=illuvium
DB_USER=root
DB_PASSWORD=
DB_SSL=false

# Redis
REDIS_HOST=host.docker.internal
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_KEY_PREFIX=backend-node:
REDIS_USE_TLS=false

# Thirdweb
THIRDWEB_SECRET_KEY=test-secret-key
THIRDWEB_CLIENT_ID=test-client-id
THIRDWEB_AUTH_DOMAIN=localhost:5000

# AWS (optional for testing)
AWS_REGION=us-east-1
AWS_EVENTBRIDGE_BUS_NAME=illuvium-events
AWS_EVENTBRIDGE_SOURCE=illuvium.backend.node

# OpenTelemetry (optional)
OTEL_SERVICE_NAME=backend-node
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000