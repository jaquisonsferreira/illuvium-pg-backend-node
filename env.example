# Application
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=26257
DB_NAME=illuvium
DB_USER=root
DB_PASSWORD=
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://illuvium.io

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# API Keys
TRUSTED_API_KEYS=key1,key2,key3

# Privy Authentication
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here

# Sentry
SENTRY_DSN=
SENTRY_ENABLED=false
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_TRACE_PROPAGATION_TARGETS=api.illuvium.io,localhost