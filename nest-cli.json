{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": []
  },
  "watchOptions": {
    "followSymlinks": false,
    "interval": 1000,
    "binaryInterval": 1000,
    "awaitWriteFinish": {
      "stabilityThreshold": 2000,
      "pollInterval": 100
    }
  }
}
