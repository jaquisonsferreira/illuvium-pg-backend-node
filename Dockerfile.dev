FROM node:22-slim

# Install build dependencies and procps for ps command
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    procps \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copiar apenas package.json primeiro
COPY package.json ./

# Garantir que todas as dependências sejam instaladas (incluindo devDependencies)
ENV NODE_ENV=development

# Instalar @nestjs/cli globalmente
RUN npm install -g @nestjs/cli

# Instalar dependências
RUN npm install --legacy-peer-deps

# Copiar o resto do código DEPOIS de instalar as dependências
# Isso evita que o .dockerignore interfira com node_modules
COPY . .

# Adicionar node_modules/.bin ao PATH
ENV PATH="/app/node_modules/.bin:${PATH}"

EXPOSE 4000

CMD ["npm", "run", "start:dev"]