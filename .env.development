# Database Configuration
DB_HOST=cockroachdb
DB_PORT=26257
DB_NAME=illuvium
DB_USER=backend_node
DB_PASSWORD=
DB_SSL=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_KEY_PREFIX=backend-node:
REDIS_USE_TLS=false

# AWS Configuration (Disabled for local dev)
AWS_REGION=us-west-2
IS_DISABLED_EVENTBRIDGE=true

# EventBridge Configuration
AWS_EVENTBRIDGE_BUS_NAME=obelisk-events
AWS_EVENTBRIDGE_SOURCE=obelisk.backend.node

# Thirdweb Configuration (Free Tier)
THIRDWEB_SECRET_KEY=your_dev_secret_key
THIRDWEB_AUTH_DOMAIN=http://localhost:5000

# API Keys (Development)
API_KEY_SERVICE=dev_api_key_123

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Application
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# OpenTelemetry (Optional for local)
OTEL_SERVICE_NAME=obelisk-backend-node
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_ENABLED=false