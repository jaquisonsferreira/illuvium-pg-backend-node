{
  "watch": ["src"],
  "ext": "ts",
  "ignore": ["src/**/*.spec.ts"],
  "exec": "node -r ts-node/register -r tsconfig-paths/register src/main.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 500,
  "signal": "SIGTERM",
  "events": {
    "restart": "echo 'ðŸ”„ Restarting application...'",
    "crash": "echo 'ðŸ’¥ Application crashed, waiting for changes...'"
  }
}